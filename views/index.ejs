<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MarkdownToHtml</title>
    <link rel="stylesheet" href="/css/bootstrap.css" media="screen" charset="utf-8">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="icon" href="favicon.png" />
    <link rel="stylesheet" href="/css/site.css" />
</head>

<body>
    <div class="header">
        <div class="header-text">
            Simple markdown to html parser
        </div>
    </div>
    <div class="content-container">
        <div class="syntax-box">
            <table id="syntax-table" class="table syntax-table" hidden="hidden">
                <th>Markdown</th>
                <th>Html</th>
                <tr>
                    <td># Heading 1</td>
                    <td>&lt;h1&gt;Heading 1&lt;/h1&gt; </td>
                </tr>
                <tr>
                    <td>## Heading 2 </td>
                    <td>&lt;h2&gt;Heading 2&lt;/h2&gt; </td>
                </tr>
                <tr>
                    <td>**Bolt**</td>
                    <td>&lt;b&gt;Bolt&lt;/b&gt;</td>
                </tr>
                <tr>
                    <td>*Italic*</td>
                    <td>&lt;i&gt;Italic&lt;/i&gt;</td>
                </tr>
                <tr>
                    <td>> cite text</td>
                    <td>&lt;blockquote&gt;&lt;p&gt; cite text &lt;/p&gt;&lt;/blockquote&gt;</td>
                </tr>
                <tr>
                    <td> &nbsp;Paragraph</td>
                    <td>&lt;p&gt;Paragraph&lt;/p&gt;</td>
                </tr>
            </table>
            <div id="syntax-toggle" class="syntax-toggle">
                <div class="row">
                    <i class="material-icons col-xs-3 toggle-arrow">arrow_drop_down</i>
                    <div class="center col-xs-6">Syntax</div>
                    <i class="material-icons col-xs-3 toggle-arrow">arrow_drop_down</i>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div>
                        <h3>Markdown input</h3>
                        <hr/>
                        <form action="/inputs" method="POST">
                            <input placeholder="identifier:" name="name" hidden="hidden" value="input" />
                            <label>Input text:</label><br/>
                            <textarea class="form-control" cols="25" rows="5" type="text" placeholder="input" name="input"></textarea><br/>
                            <button class="btn btn-primary" type="submit">Submit</button>
                        </form>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div>
                        <h3>Output as string</h3>
                        <hr/>
                        <div class="inputs">
                            <% if(inputs.length > 0) {%>
                                <% for(var i=0; i<1; i++) {%>
                                    <span><%= inputs[inputs.length-1].output %></span>
                                    <% } %>
                                        <% } %>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div>
                        <h3>Output as HTML</h3>
                        <hr/>
                        <div class="inputs">
                            <% if(inputs.length > 0) {%>
                                <% for(var i=0; i<1; i++) {%>
                                    <%- inputs[inputs.length-1].output %>
                                        <% } %>
                                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <hr/>
            <div>
                <h3>Delete history</h3>
                <button id="delete" class="btn btn-primary "> Delete</button>
            </div>
            <h3>history</h3>
            <ul class="inputs">
                <% for(var i=0; i<inputs.length; i++) {%>
                    <li class="input">
                        <span>ID:<%= inputs[i].name %></span>
                        <span>Input:<%= inputs[i].input %></span>
                        <span>Output:<%= inputs[i].output %></span>
                    </li>
                    <% } %>
            </ul>
        </div>
    </div>
    <script src="/js/jquery.js" charset="utf-8"></script>
    <script src="/js/bootstrap.js" charset="utf-8"></script>
    <script src="main.js"></script>
</body>

</html>